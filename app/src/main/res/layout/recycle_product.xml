<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="product"
            type="com.omarmattr.mcc_g_analytics.model.Product" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="@dimen/fragment_horizontal_margin_page"
        android:layout_marginVertical="@dimen/fragment_margin_min"
        android:backgroundTint="@color/background_item"
        app:cardElevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_corner_radius_normal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/zahra_arabic"
            android:gravity="center"
            android:text="@{product.name}"
            android:textColor="@color/onPrimary"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>
</layout>
